{
  "name": "nci-ansible-ui",
  "version": "2.0.0-alpha.2",
  "description": "Simple web interface for run ansible playbooks",
  "main": "app.js",
  "scripts": {
    "dev-nci": "$SHELL -c 'cd dev && ../node_modules/.bin/nci'",
    "watch-dev-nci": "nodemon -w dev/data/ -e json,yaml -x 'npm run dev-nci'",
    "test-ui": "cypress run",
    "dev-server-and-test-ui": "test -z $NODE_ENV && export NODE_ENV=production && npm run build-client && npm run dev-nci& echo \"Server pid: $!\" && wait-on --timeout 30000 http://127.0.0.1:3000 && npm run test-ui",
    "dev": "test -z $NODE_ENV && export NODE_ENV=development; npm run watch-dev-nci",
    "lint": "eslint ./",
    "build-client": "rm -rf ./client-build && cd client && npm run build && mv -v build ../client-build",
    "_build-docker-image": "if [ \"$imageTag\" = \"\" ]; then echo \"imageTag is not set\"; exit 1; fi; docker build --tag okvd/nci-ansible-ui:$imageTag ./docker/",
    "build-docker-image": "export imageTag=$npm_package_version && npm run _build-docker-image",
    "build-docker-image-alpha": "export imageTag=$npm_package_version-alphaimage && npm run _build-docker-image",
    "build-docker-image-latest": "export imageTag=latest && npm run _build-docker-image"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/node-ci/nci-ansible-ui.git"
  },
  "keywords": [
    "nciplugin",
    "ui",
    "interface",
    "ansible",
    "playbook"
  ],
  "contributors": [
    {
      "name": "Oleg Korobenko",
      "email": "oleg.korobenko@gmail.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/node-ci/nci-ansible-ui/issues"
  },
  "homepage": "https://github.com/node-ci/nci-ansible-ui",
  "dependencies": {
    "data.io": "0.3.0",
    "socket.io": "4.1.1",
    "twostep": "0.4.2",
    "underscore": "1.13.1"
  },
  "devDependencies": {
    "cypress": "7.3.0",
    "eslint": "7.7.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-plugin-import": "2.22.0",
    "memdown": "5.1.0",
    "nci": "1.0.27",
    "nci-rest-api-server": "2.0.1",
    "nci-static-server": "2.0.1",
    "nci-yaml-reader": "1.2.3",
    "nodemon": "2.0.7",
    "url-join": "4.0.1",
    "wait-on": "4.0.0"
  },
  "peerDependencies": {
    "nci": ">=1.0.1 <1.1.0"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
