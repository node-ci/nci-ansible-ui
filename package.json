{
  "name": "nci-ansible-ui",
  "version": "2.0.0-alpha.2",
  "description": "Simple web interface for run ansible playbooks",
  "main": "app.js",
  "scripts": {
    "dev-nci": "$SHELL -c 'cd dev && ../node_modules/.bin/nci'",
    "watch-dev-nci": "nodemon -w dev/data/ -e json,yaml -x 'npm run dev-nci'",
    "test-ui": "cypress run",
    "dev-server-and-test-ui": "nrun build && nrun dev-nci& echo \"Server pid: $!\" && wait-on --timeout 30000 http://127.0.0.1:3000 && nrun test-ui",
    "build-less": "lessc app/styles/index.less > static/css/index.css",
    "build-js": "browserify  app/app.js -t ./transforms/jade.js | terser -mc > static/js/app.build.js",
    "watch-less": "chokidar --initial --silent app/styles/**/*.less app/styles/index.less -c 'npm run build-less'",
    "watch-js": "watchify app/app.js -t ./transforms/jade.js -o static/js/app.build.js -v",
    "_init-dev": "touch static/js/app.build.js && touch static/css/index.css",
    "dev": "test -z $NODE_ENV && export NODE_ENV=development; nrun _init-dev && run-p --continue-on-error build-fonts watch-less watch-js build-html watch-dev-nci",
    "sync": "npm install && npm prune",
    "lint": "eslint ./",
    "build-fonts": "mkdir -p static/fonts/ && cp ./node_modules/bootstrap/fonts/* ./static/fonts/ && cp ./node_modules/font-awesome/fonts/* ./static/fonts/ && cp ./node_modules/scmicons/fonts/* ./static/fonts/",
    "build-clean": "rm static/index.html",
    "build-html": "jade views/index.jade --obj \"{'env': '$NODE_ENV'}\" -o static/",
    "build": "test -z $NODE_ENV && export NODE_ENV=production; nrun build-fonts && nrun build-js && nrun build-less && nrun build-html",
    "_build-docker-image": "if [ \"$imageTag\" = \"\" ]; then echo \"imageTag is not set\"; exit 1; fi; docker build --tag okvd/nci-ansible-ui:$imageTag ./docker/",
    "build-docker-image": "export imageTag=$npm_package_version && npm run _build-docker-image",
    "build-docker-image-alpha": "export imageTag=$npm_package_version-alphaimage && npm run _build-docker-image",
    "build-docker-image-latest": "export imageTag=latest && npm run _build-docker-image"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/node-ci/nci-ansible-ui.git"
  },
  "keywords": [
    "nciplugin",
    "ui",
    "interface",
    "ansible",
    "playbook"
  ],
  "contributors": [
    {
      "name": "Oleg Korobenko",
      "email": "oleg.korobenko@gmail.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/node-ci/nci-ansible-ui/issues"
  },
  "homepage": "https://github.com/node-ci/nci-ansible-ui",
  "dependencies": {
    "data.io": "0.3.0",
    "socket.io": "2.3.0",
    "twostep": "0.4.2",
    "underscore": "1.8.3"
  },
  "devDependencies": {
    "ansi_up": "1.3.0",
    "bootstrap": "3.4.1",
    "browserify": "16.5.1",
    "chokidar-cli": "2.1.0",
    "cypress": "4.9.0",
    "eslint": "7.3.1",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-plugin-import": "2.21.2",
    "font-awesome": "4.3.0",
    "jade": "1.11.0",
    "less": "3.7.1",
    "memdown": "5.1.0",
    "moment": "2.24.0",
    "nci": "1.0.26",
    "nci-rest-api-server": "2.0.0",
    "nci-static-server": "2.0.0",
    "nci-yaml-reader": "1.2.2",
    "nodemon": "2.0.2",
    "npm-run-all": "4.1.5",
    "nrun": "0.1.4",
    "react": "0.14.9",
    "react-dom": "0.14.9",
    "react-jade": "2.5.0",
    "react-router": "0.13.6",
    "reflux": "0.2.7",
    "scmicons": "1.3.0",
    "simple-scrolltop": "1.0.1",
    "socket.io-client": "2.3.0",
    "terser": "4.6.11",
    "through": "2.3.8",
    "url-join": "4.0.1",
    "wait-on": "4.0.0",
    "watchify": "3.11.1"
  },
  "peerDependencies": {
    "nci": ">=1.0.1 <1.1.0"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
